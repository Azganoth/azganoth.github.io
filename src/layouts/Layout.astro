---
import Icons from "@components/Icons.astro";
import ProjectDetails from "@components/interactive/ProjectDetails.svelte";
import interVarWoff2 from "@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url";

const title = "Azganoth - Desenvolvedor Web FullStack";
const description =
  "Portf√≥lio para apresentar as minhas habilidades e projetos.";
const url = "https://azganoth.github.io/";
const metaImage = "/meta_image.png";
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={interVarWoff2}
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={metaImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={metaImage} />
  </head>
  <body class="body bg-slate leading-normal text-white">
    <slot />
    <ProjectDetails client:idle />
    <Icons />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Patua One";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(@fontsource/patua-one/files/patua-one-latin-400-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
      U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC,
      U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Montserrat Alternates";
    font-style: normal;
    font-display: swap;
    font-weight: 700;
    src: url(@fontsource/montserrat-alternates/files/montserrat-alternates-latin-700-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
      U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC,
      U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Inter Variable";
    font-style: normal;
    font-display: swap;
    font-weight: 400 700;
    src: url(@fontsource-variable/inter/files/inter-latin-wght-normal.woff2)
      format("woff2-variations");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
      U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC,
      U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Cascadia Code";
    font-style: normal;
    font-display: swap;
    font-weight: 500 600;
    src: url(/fonts/CascadiaCode.woff2) format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
      U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC,
      U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer components {
    .title {
      @apply font-display text-2xl font-bold max-md:-tracking-wider;
    }

    .heading-lg {
      @apply font-display text-2xl font-bold;
    }

    .heading-md {
      @apply font-display text-xl font-bold;
    }

    .sub-heading-lg {
      @apply font-body text-lg font-medium;
    }

    .sub-heading-md {
      @apply font-body text-md font-medium;
    }

    .body {
      @apply font-body text-md font-normal;
    }

    .code {
      @apply font-code text-md font-semibold;
    }

    .code-indent {
      @apply relative pl-8 before:absolute before:inset-y-0 before:left-[calc(1rem-1px)] before:w-0.5 before:bg-gray before:opacity-25 before:content-[''];
    }

    .push-down {
      @apply transition-transform duration-300 ease-out motion-safe:active:scale-90;
    }
  }

  @layer utilities {
    .reveal {
      @apply transition-opacity-transform duration-300 ease-in motion-safe:will-change-[opacity,transform];
    }

    .reveal-slide-top {
      @apply reveal:-translate-y-2 reveal:opacity-0;
    }

    .reveal-slide-left {
      @apply reveal:-translate-x-2 reveal:opacity-0;
    }

    .reveal-slide-bottom {
      @apply reveal:translate-y-2 reveal:opacity-0;
    }

    .reveal-pop {
      @apply reveal:scale-95 reveal:opacity-0;
    }
  }

  :root {
    --underscore: "_";
  }
</style>
