---
import { TECH_ORDER } from "@app/constants";
import { ICONS } from "@lib/icons";

const iconsSet = new Set(Object.keys(ICONS));
TECH_ORDER.forEach((tech) => {
  if (!iconsSet.has(tech)) {
    throw new Error(`Icon for "${tech}" tech not found`);
  }
});
---

<svg style="display: none;">
  {
    Object.entries(ICONS).map(
      ([
        name,
        {
          data,
          size: [width, height],
          fill,
          stroke,
          strokeWidth,
        },
      ]) => (
        <symbol
          viewBox={`0 0 ${width} ${height}`}
          id={`icon-${name}`}
          fill="currentColor"
        >
          <path
            d={data}
            fill={fill}
            stroke={stroke}
            stroke-width={strokeWidth}
          />
        </symbol>
      ),
    )
  }
</svg>
