---
import ProjectFilter from "@components/interactive/ProjectFilter.svelte";
import ProjectList from "@components/interactive/ProjectList.svelte";
import Content from "@layouts/Content.astro";
import { getAllProjects } from "@utils/projects";

const projects = await getAllProjects();
---

<Content id="projects" title="Projetos">
  <ProjectFilter class="pb-8" client:idle />
  <ProjectList class="pb-32" {projects} client:load />
</Content>
